{% extends 'base.html.twig' %}

{% block title %}Contenu index{% endblock %}

{% block body %}
    <h1>Contenu index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Uri</th>
                <th>Code</th>
                <th>ImageSrc</th>
                <th>Categorie</th>
                <th>DateCreation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contenu in contenus %}
            <tr>
                <td>{{ contenu.id }}</td>
                <td>{{ contenu.titre }}</td>
                <td>{{ contenu.uri }}</td>
                <td>{{ contenu.code }}</td>
                <td>{{ contenu.imageSrc }}</td>
                <td>{{ contenu.categorie }}</td>
                <td>{{ contenu.dateCreation ? contenu.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('contenu_show', {'id': contenu.id}) }}">show</a>
                    <a href="{{ path('contenu_edit', {'id': contenu.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contenu_new') }}">Create new</a>
{% endblock %}
